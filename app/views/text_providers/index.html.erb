<div class="container text-center">
  <div class="row btn-group float-end">
    <%= link_to "Messages", text_messages_path, class: "btn btn-primary mb-2" %>
    <%= link_to 'New Provider', new_text_provider_path, class: 'btn btn-primary mb-2' %>
    <%= link_to 'Reset Counts', reset_counts_text_providers_path,
                                class: 'btn btn-primary' %>
  </div>
  <div class="row provider_table m-5">
    <div class="col-md-12">
      <h1>Text providers<h1>
      <% if @text_providers.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered mt-3">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Allocation</th>
                <th>Active</th>
                <th>Status</th>
                <th>Count</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @text_providers.each do |provider| %>
                <tr>
                  <td><%= link_to provider.name, text_provider_path(provider) %></td>
                  <td><%= provider.allocation %></td>
                  <td><%= provider.active %></td>
                  <td><%= provider.state %></td>
                  <td><%= provider.count %></td>
                  <td>
                    <%= link_to 'edit', edit_text_provider_path(provider) %>
                    <%= link_to 'delete', text_provider_delete_provider_path(provider) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class='no-providers'>There are no text providers to display at this time.</div>
      <% end %>
    </div>
  </div>
</div>
