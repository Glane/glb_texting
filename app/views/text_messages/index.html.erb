<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container text-center">
  <div class="row btn-group float-end">
    <%= link_to "Manage Providers", text_providers_path, class: "btn btn-primary mb-2" %>
    <%= link_to 'Send A New Message', new_text_message_path, class: 'btn btn-primary' %>
  </div>
  <div class="row message_table mt-5">
    <div class="col-md-12">
      <h1>Text Messages</h1>
      <div class='mt-3 paginate'><%= will_paginate @text_messages %></div>
      <% if @text_messages.any? %>
        <div class="table-responsive" id="message-container">
          <table class="table table-striped table-bordered mt-3">
            <thead class="thead-dark">
              <tr>
                <th>Number</th>
                <th>Message</th>
                <th>Message ID</th>
                <th>Status</th>
                <th>Created At</th>
              </tr>
            </thead>
            <tbody id='message-data'>
              <% @text_messages.each do |message| %>
                <tr>
                  <td><%= message.to_number %></td>
                  <td><%= truncate(message.message, length: 100) %></td>
                  <td><%= message.message_id %></td>
                  <td><%= message.state %></td>
                  <td><%= message.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class='no-messages'>There are no messages to display at this time.</div>
      <% end %>
    </div>
  </div>
</div>
