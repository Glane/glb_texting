<div class="container">
  <div class="row mt-5">
    <% if @text_message.errors.any? %>
      <div class="col-12 text-center">
        <%= render 'errors' %>
        <div><%= link_to 'Send A New Message',
                          new_text_message_path,
                          class: 'btn btn-primary' %></div>
      </div>
    <% else %>
      <div class="col-12 text-center">
        <h1>Voila!<h1>
        <h3>Your Message is on it's way.<h3>
        <h3>Check it's status at Messages.<h3>
        <div class="mt-5"><%= link_to "Messages", text_messages_path, class: "btn btn-primary" %></div>
      </div>
    <% end %>
  </div>
</div>